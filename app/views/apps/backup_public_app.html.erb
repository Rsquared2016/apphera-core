<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sm-4">
    <h2>Public Apps</h2>
    <%= render_breadcrumbs %>
  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class='row'>
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Public Apps</h5>
      </div>
      <div class="ibox-content">
        <% if @public_apps.present? %>
          <table class="table table-hover">

            <thead>
              <tr>
                <th>Name</th>
                <th>Action</th>
              </tr>
            </thead>

            <tbody>
              <% @public_apps.each do |app| %>
                <tr>
                  <td><%= app.name %></td>
                  <td>
                    <%= link_to 'Quiz', public_quiz_concept_path(app.id), class: 'btn btn-xs btn-default' if app.concepts.present? %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p>No Apps Found </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
