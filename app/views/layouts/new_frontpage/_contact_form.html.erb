<div class='col-md-6'>
  <%= form_with(model: Contact.new, local: true, class: 'contact-form') do |f| %>
    <%= hidden_field_tag :token, Time.zone.now.to_i %>
    <div class='form-group' data-animate='fadeInDown' data-animate-delay='0.2'>
      <%= f.label :name, class: 'sr-only' %>
      <%= f.text_field :name, placeholder: 'Write your name here...', class: 'form-control', required: 'required' %>
    </div>

    <div class='form-group' data-animate='fadeInDown' data-animate-delay='0.3'>
      <%= f.label :email, class: 'sr-only' %>
      <%= f.email_field :email, placeholder: 'Write your email here...', class: 'form-control', required: 'required' %>
    </div>

    <div class='form-group' data-animate='fadeInDown' data-animate-delay='0.4'>
      <%= f.label :subject, class: 'sr-only' %>
      <%= f.text_field :subject, placeholder: 'Write your subject here...', class: 'form-control', required: 'required' %>
    </div>

    <div class='form-group' data-animate='fadeInDown' data-animate-delay='0.5'>
      <%= f.label :message, class: 'sr-only' %>
      <%= f.text_area :message, placeholder: 'Message....', class: 'form-control', required: 'required' %>
    </div>
    <%= button_tag "Send Message", class: 'btn btn-outline-primary btn-lg', data: {disable_with: 'Sending Message...'} %>
  <% end %>
</div>
